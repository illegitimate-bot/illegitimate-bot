{
    "$schema": "https://json.schemastore.org/nodemon.json",
    "restartable": "rs",
    "ignore": [
        ".git",
        "node_modules",
        "data"
    ],
    "verbose": true,
    "env": {
        "NODE_PATH": "src/",
        "NODE_ENV": "dev",
        "TYPESCRIPT": "true",
        "TS_NODE_FILES": "true",
        "TS_NODE_TRANSPILE_ONLY": "true"
    },
    "ext": "ts"
}
