{
    "compilerOptions": {
        "target": "ES2022",
        "module": "Node16",
        "moduleResolution": "Node16",
        "strict": true,
        "noImplicitAny": true,
        "declaration": false,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "noUnusedLocals": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "utils/*": ["src/utils/*"],
            "interfaces": ["src/interfaces/index"],
            "schemas/*": ["src/schemas/*"],
            "config/*": ["src/config/*"],
        }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}